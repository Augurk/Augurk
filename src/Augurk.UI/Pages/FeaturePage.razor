@page "/feature/{product}/{group}/{featureTitle}/{version?}"
@inject FeatureService FeatureService

<div class="container-fluid">
    <Row>
        <p>
            @if (@HasTags)
            {
                <i class="bi-tag"></i>
            }
            <i>tags</i>
        </p>
    </Row>
    <Row>
        <h3>@CurrentFeature?.Title</h3>
    </Row>
    <Row>
        <p>@CurrentFeature?.Description</p>
    </Row>
    @if (CurrentFeature != null)
    {
        <Row ItemsPerRow="ItemsPerRow.One">
            <Collapse ShowArrow="true">
                <CollapseItems>
                    @foreach (var scenario in @CurrentFeature?.Scenarios)
                    {
                        <CollapseItem Text="@scenario.Title">
                            <p class="card-text">@scenario.Description</p>
                            <ul>
                                <li>Given ...</li>
                                <li>When ...</li>
                                <li>Then ...</li>
                            </ul>
                        </CollapseItem>
                    }
                    <CollapseItem Text="Dummy Scenario">
                        <p class="card-text">Dummy Scenario</p>
                        <ul>
                            <li>Given ...</li>
                            <li>When ...</li>
                            <li>Then ...</li>
                        </ul>
                    </CollapseItem>
                </CollapseItems>
            </Collapse>
        </Row>
    }
</div>

@code {

    [Parameter]
    public string Product { get; set; }

    [Parameter]
    public string Group { get; set; }

    [Parameter]
    public string FeatureTitle { get; set; }

    [Parameter]
    public string Version { get; set; }

    private Feature CurrentFeature { get; set; }
    private bool HasTags { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        CurrentFeature = await FeatureService.GetFeatureAsync(Product, Group, FeatureTitle, Version);
    }
}